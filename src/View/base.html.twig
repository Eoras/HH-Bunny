<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="build/global.css">
    <link href="https://fonts.googleapis.com/css?family=Josefin+Sans|Quicksand" rel="stylesheet">
    <link rel="icon" type="image/png" href="favicon.png" size="16x16"/>
    <title>HH BUNNY - {% block titlePage %}{% endblock %}</title>
</head>
<body>
<div class="container">
    {% block header %}
        <div class="d-flex align-items-center">
            <a href="/"><img src="img/bunny.png" alt="HH Bunny Logo" class="img-fluid mx-5 my-5" style="height: 100px"></a>
            <div>
                <h1 class="m-0">
                    BUNNY HH - {% block headerTitle %}The <strong>slaying</strong> raid{% endblock %}
                </h1>
                <span class="mr-2">Welcome:</span>
                <a href="." data-toggle="tooltip" title="Home"><span class="fa fa-home m-0 mx-2 text-light"></span></a>
                <a href="?r=showAll" data-toggle="tooltip" title="Show rolls"><span class="fa fa-list m-0 mx-2 text-light"></span></a>
                {% if admin is defined and admin.authorized == true %}
                    {% block admin %}
                        <span class="mx-2 text-danger">{{ admin.pseudo }}:</span>
                        <a href="?r=addRoll" data-toggle="tooltip" title="Add a new Roll"><span class="fa fa-plus m-0 mx-2 text-light"></span></a>
                        <a href="?r=logoff" data-toggle="tooltip" title="Sign out"><span class="fa fa-power-off m-0 mx-2 text-light"></span></a>
                    {% endblock %}
                    {% else %}
                        <a href="" data-toggle="modal" data-tooltip="tooltip" title="Login" data-target="#login"><span class="fa fa-lock m-0 mx-2 text-light"></span></a>
                        {#MODAL#}
                        <div class="modal fade" id="login" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-sm">
                                <div class="modal-content bg-dark">
                                    <div class="modal-body">
                                        <h3>Login</h3>
                                        <hr class="bg-light">
                                        <form action="" method="GET">
                                            <div class="form-group">
                                                <label for="admin">Pseudo</label>
                                                <input type="text" name="admin" id="admin" class="form-control">
                                                <div class="float-right mt-2">
                                                    <button type="button" class="btn btn-dark d-inline" data-dismiss="modal"><i class="fa fa-remove text-danger" aria-hidden="true"></i> Cancel</button>
                                                    <button class="btn btn-dark" type="submit"><i class="fa fa-check text-success" aria-hidden="true"></i> Go</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {#MODAL FIN#}
                {% endif %}
            </div>
        </div>
        {% block headerContent %}
        {% endblock %}

    {% endblock %}
    {% block boddy %}
        {% block boddyContent %}{% endblock %}
    {% endblock %}

</div>
{% block js %}
    <script src="build/global.js" type="text/javascript"></script>
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip();
            $('[data-tooltip="tooltip"]').tooltip();
        })
    </script>
{% endblock %}
</body>
</html>